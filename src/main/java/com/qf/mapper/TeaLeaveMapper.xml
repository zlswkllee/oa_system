<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.mapper.TeaLeaveMapper">
    <update id="updateLeave" parameterType="int">
            update tealeave set state=1 where leidt =#{leidt}
    </update>
    <insert id="addLeave" parameterType="teaLeave" keyProperty="lid" useGeneratedKeys="true">
        insert tealeave(reason,stardate,enddate) value(#{reason},#{stardate},#{enddate})

    </insert>

    <select id="getLeave" resultType="teaLeave">
        select * from tealeave where state=0
    </select>

    <select id="getLname" resultType="string" parameterType="string">
        select lname from leader;
    </select>

    <select id="getTname" resultType="string" parameterType="string">
        select tname from teacher where username=#{username}
    </select>

</mapper>